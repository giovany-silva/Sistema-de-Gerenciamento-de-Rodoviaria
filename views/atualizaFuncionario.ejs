  <body>
    <form action="/atualizafuncionario" class="row g-3" method="post">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">CPF do Funcionário</label>
    <input type="text" class="form-control"name="funcionarioCPF" placeholder="Digite o CPF">
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Novo Nome</label>
    <input type="text" class="form-control"name="newname" placeholder="Digite o novo nome">
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Novo CPF</label>
    <input type="text" class="form-control"name="newCPF" placeholder="Digite o novo CPF">
  </div>
  <div class="col-md-6">
    <label for="funcionarioCargo" class="form-label">Novo Cargo </label>
    <select name="newCargo" class="form-control">
      <option value="Gerente" >Gerente</option>
      <option value="Balconista" selected>Balconista</option>
   </select>
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Novo Telefone</label>
    <input type="text" class="form-control"name="newTelefone" placeholder="Digite o novo Telefone">
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Novo Endereço</label>
    <input type="text" class="form-control"name="newEndereco" placeholder="Digite o novo Endereço">
  </div>
  
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Atualizar</button>
  </div>
