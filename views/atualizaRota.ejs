    <meta name="viewport" content="width=device-width">
    <title>Sistema Rodoviária</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <h1 class="text-center title-1"> Atualizar Rota </h1>
  </head>
  <body>
    <form action="/atualizarota" class="row g-3" method="post">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Código</label>
    <input type="text" maxlength=4 class="form-control"name="rotaCodigo" placeholder="Digite o Código (apenas dígitos)">
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Novo Código</label>
    <input type="text" maxlength=4 class="form-control"name="newCodigo" placeholder="Digite o novo código (apenas dígitos)">
  </div>
  <div class="col-md-6">
    <label for="newOrigem" class="form-label">Nova Origem</label>
    <select name="newOrigem" class="form-control">
      <option value="Itajubá" >Itajubá</option>
      <option value="Pouso Alegre" selected>Pouso Alegre</option>
      <option value="Caxambu" >Caxambu</option>
      <option value="São Lourenço" >São Lourenço</option>
      <option value="São Paulo" >São Paulo</option>
   </select>
  </div>
  <div class="col-md-6">
    <label for="newDestino" class="form-label">Novo Destino</label>
    <select name="newDestino" class="form-control">
      <option value="Itajubá" >Itajubá</option>
      <option value="Pouso Alegre">Pouso Alegre</option>
      <option value="Caxambu" selected>Caxambu</option>
      <option value="São Lourenço" >São Lourenço</option>
      <option value="São Paulo" >São Paulo</option>
   </select>
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Nova Duração</label>
    <input type="text" class="form-control"name="newDuracao" placeholder="Digite a nova Duração">
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Nova Distância (em Km)</label>
    <input type="text" class="form-control"name="newDistancia" placeholder="Digite a nova Distância">
  </div>
  <div class="col-md-6">
    <label for="newPartida" class="form-label">Novo Horário de Partida</label>
    <select name="newPartida" class="form-control">
      <option value="10:00" >10:00</option>
      <option value="11:00">11:00</option>
      <option value="13:00" selected>13:00</option>
      <option value="15:00" >15:00</option>
      <option value="21:00" >21:00</option>
   </select>
  </div>
  <div class="col-6">
    <label for="newChegada" class="form-label">Novo Horário de Chegada</label>
    <select name="newChegada" class="form-control">
      <option value="12:00" >12:00</option>
      <option value="14:00">14:00</option>
      <option value="18:00" selected>18:00</option>
      <option value="22:00" >22:00</option>
      <option value="01:00" >01:00</option>
   </select>
  </div>
  <div class="col-6">
    <label for="newDias" class="form-label">Novo Dia da Semana</label>
    <select name="newDias" class="form-control">
      <option value="Domingo" >Domingo</option>
      <option value="Segunda">Segunda</option>
      <option value="Terça" selected>Terça</option>
      <option value="Quarta" >Quarta</option>
      <option value="Quinta" >Quinta</option>
      <option value="Sexta" >Sexta</option>
   </select>
  </div>
  
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Atualizar</button>
  </div>
</form>
  </body>
  
</html>