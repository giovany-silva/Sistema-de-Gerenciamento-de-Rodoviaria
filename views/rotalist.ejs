<!DOCTYPE html>
<html lang="en">
<head>
    <nav class="navbar navbar-dark bg-primary">
        <form action = "/" class="btn btn-link-dark">
            <button type="submit" class="btn btn-link-dark">Home</button>
          </form>
          <form action = "/funcionario" class="btn btn-link-dark">
            <button type="submit" class="btn btn-link-dark">Funcionários</button>
          </form>
          <form action = "/passagem" class="btn btn-link-dark">
            <button type="submit" class="btn btn-link-dark">Passagem</button>
          </form>
          <form action = "/onibus" class="btn btn-link-dark">  
            <button type="submit" class="btn btn-link-dark">Ônibus</button>
          </form>
          <form action = "/empresas" class="btn btn-link-dark">
            <button type="submit" class="btn btn-link-dark">Empresas</button>
          </form>
          <form action = "/rotas" class="btn btn-link-dark">
            <button type="submit" class="btn btn-link-dark">Rotas</button>
          </form>
      </nav>
</head>
<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <h1 class="text-center title-1"> Lista de Rotas </h1>
    <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">Código</th>
            <th scope="col">Origem</th>
            <th scope="col">Destino</th>
            <th scope="col">Duração</th>
            <th scope="col">Distância</th>
            <th scope="col">Hora de Partida</th>
            <th scope="col">Hora de Chegada</th>
            <th scope="col">Dias da Semana</th>
          </tr>
        </thead>
        <% rotalist.forEach(function(user){ %>
            <tbody>
                <tr>
                <td><%= user.codigo %></td>
                <td><%= user.origem %></td>
                <td><%= user.destino %></td>
                <td> <%= user.duracao %></td>
                <td> <%= user.distancia %></td>
                <td> <%= user.horaPartida %></td>
                <td> <%= user.horaChegada %></td>
                <td> <%= user.dias %></td>
                </tr>
            </tbody>
        <%})%>
    </table>
</body>
</html>
