    <meta name="viewport" content="width=device-width">
    <title>Sistema Rodoviária</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <h1 class="text-center title-1"> Cadastrar Rota </h1>
  </head>
  <body>
    <form action="/addrota" class="row g-3" method="post">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Código</label>
    <input type="text" maxlength=4 class="form-control"name="rotaCodigo" placeholder="Digite o Código (apenas dígitos)">
  </div>
  <div class="col-md-6">
    <label for="rotaOrigem" class="form-label">Origem</label>
    <select name="rotaOrigem" class="form-control">
      <option value="Itajubá" >Itajubá</option>
      <option value="Pouso Alegre" selected>Pouso Alegre</option>
      <option value="Caxambu" >Caxambu</option>
      <option value="São Lourenço" >São Lourenço</option>
      <option value="São Paulo" >São Paulo</option>
   </select>
  </div>
  <div class="col-md-6">
    <label for="rotaDestino" class="form-label">Destino</label>
    <select name="rotaDestino" class="form-control">
      <option value="Itajubá" >Itajubá</option>
      <option value="Pouso Alegre">Pouso Alegre</option>
      <option value="Caxambu" selected>Caxambu</option>
      <option value="São Lourenço" >São Lourenço</option>
      <option value="São Paulo" >São Paulo</option>
   </select>
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Duração</label>
    <input type="text" class="form-control"name="rotaDuracao" placeholder="Digite a Duração">
  </div>
  <div class="col-6">
    <label for="inputAddress" class="form-label">Distância (em Km)</label>
    <input type="text" class="form-control" name="rotaDistancia" placeholder="Digite a Distância">
  </div>
  <div class="col-md-6">
    <label for="rotaPartida" class="form-label">Horário de Partida</label>
    <select name="rotaPartida" class="form-control">
      <option value="10:00" >10:00</option>
      <option value="11:00">11:00</option>
      <option value="13:00" selected>13:00</option>
      <option value="15:00" >15:00</option>
      <option value="21:00" >21:00</option>
   </select>
  </div>
  <div class="col-6">
    <label for="rotaChegada" class="form-label">Horário de Chegada</label>
    <select name="rotaChegada" class="form-control">
      <option value="12:00" >12:00</option>
      <option value="14:00">14:00</option>
      <option value="18:00" selected>18:00</option>
      <option value="22:00" >22:00</option>
      <option value="01:00" >01:00</option>
   </select>
  </div>
  <div class="col-6">
    <label for="rotaDias" class="form-label">Dia da Semana</label>
    <select name="rotaDias" class="form-control">
      <option value="Domingo" >Domingo</option>
      <option value="Segunda">Segunda</option>
      <option value="Terça" selected>Terça</option>
      <option value="Quarta" >Quarta</option>
      <option value="Quinta" >Quinta</option>
      <option value="Sexta" >Sexta</option>
   </select>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Cadastrar</button>
  </div>
</form>
  </body>
  
</html>