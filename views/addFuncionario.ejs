  <body>
    <form action="/addfuncionario" class="row g-3" method="post">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Nome</label>
    <input type="text" class="form-control"name="funcionarioNome" placeholder="Digite o Nome">
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">CPF</label>
    <input type="text" maxlength=11 class="form-control"name="funcionarioCPF" placeholder="Digite o CPF (apenas dígitos)">
  </div>
  <div class="col-md-6">
    <label for="funcionarioCargo" class="form-label"> Cargo </label>
    <select name="funcionarioCargo" class="form-control">
      <option value="Gerente" >Gerente</option>
      <option value="Balconista" selected>Balconista</option>
   </select>
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Telefone</label>
    <input type="text" maxlength=11 class="form-control"name="funcionarioTelefone" placeholder="Digite o Telefone (apenas dígitos)">
  </div>
  <div class="col-12">
    <label for="inputAddress" class="form-label">Endereço</label>
    <input type="text" class="form-control" name="funcionarioEndereco" placeholder="Digite o seu endereço">
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Cadastrar</button>
  </div>
</form>
